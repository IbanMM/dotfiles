# source bash
alias sbash="source ~/.bashrc"

# cd amparostorage
alias storage="cd /mnt/amparostorage/"

# edit i3 config file
alias i3conf="vim ~/.config/i3/config"

# mkdir and cd the cretated folder

mkcd() {

    mkdir -p "$1" && cd "$1"

}

# -----------------------------------------------------------------
# Pacman
# -----------------------------------------------------------------

alias pcu="sudo pacman -Syu"
alias pcy="sudo pacman -Syy"

# Search package in repos
pcs() {
    sudo pacman -Ss "$1"
}

# -----------------------------------------------------------------
# Git
# -----------------------------------------------------------------

# add commit pull & push
gacpp() {

    git add .
    git commit -m "$1"
    git pull origin master
    git push origin master

}

# -----------------------------------------------------------------
# ffmpeg encode videos
# -----------------------------------------------------------------

ffencode1080p () {

    ffmpeg -i "$1" -preset slow -codec:a libfdk_aac -b:a 128k -codec:v libx264 -pix_fmt yuv420p -b:v 4500k -minrate 4500k -maxrate 9000k -bufsize 9000k -vf scale=-1:1080 "$2"

}

ffencode720p () {

    ffmpeg -i "$1" -preset slow -codec:a aac -b:a 128k -codec:v libx264 -pix_fmt yuv420p -b:v 2500k -minrate 1500k -maxrate 4000k -bufsize 5000k -vf scale=-1:720 "$2"

}

ffencode480p () {

    ffmpeg -i "$1" -preset slow -codec:a aac -b:a 128k -codec:v libx264 -pix_fmt yuv420p -b:v 1000k -minrate 500k -maxrate 2000k -bufsize 2000k -vf scale=854:480 "$2"

}

ffencode360p () {

    ffmpeg -i "$1" -preset slow -codec:a aac -b:a 128k -codec:v libx264 -pix_fmt yuv420p -b:v 750k -minrate 400k -maxrate 1000k -bufsize 1500k -vf scale=-1:360 "$2"

}

ffremovea () {

    ffmpeg -i "$1" -c copy -an "$2"

}

